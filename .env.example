# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5433/owmetagg-database-dev
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_MANAGEMENT_URL=http://localhost:15672/api

# Queue Names
PLAYER_DATA_QUEUE=player.data.queue
STATS_TRIGGER_QUEUE=statistics.trigger.queue
RABBITMQ_EXCHANGE_NAME=overwatch.exchange
PLAYER_DATA_ROUTING_KEY=player.data
STATS_ROUTING_KEY=statistics.trigger

# OverFast API Configuration
OVERFAST_API_URL=https://overfast-api.tekrop.fr
OVERFAST_RATE_LIMIT=10
OVERFAST_TIMEOUT_MS=30000
OVERFAST_PROD_RATE_LIMIT=15

# Statistics Processing
STATS_BATCH_SIZE=1000
STATS_SCHEDULE_CRON=0 0 */4 * * *
STATISTICS_THREADS=3

# HikariCP Connection Pool (Production)
HIKARI_MAX_POOL_SIZE=50
HIKARI_MIN_IDLE=20
DB_STATEMENT_TIMEOUT=30000

# Concurrency Settings
RABBITMQ_CONCURRENCY=5-10

# Security & Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1
RATE_LIMIT_CLEANUP_MS=3600000

# CORS Configuration
CORS_ALLOWED_ORIGIN=http://localhost:3000
CORS_MAX_AGE=3600

# Hibernate Settings
HIBERNATE_BATCH_SIZE=1000

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Application Name
SPRING_APP_NAME=owmetagg-backend